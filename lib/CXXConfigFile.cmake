CMAKE_MINIMUM_REQUIRED(VERSION 3.0.2)

SET(CONCRETE_BASE_DEFINITIONS)

MACRO(CONCRETE_CXX_CONFIG_OPTION_ENABLE)
    CMAKE_PARSE_ARGUMENTS(
        CONCRETE
        ""
        "WIN32_SHUT_MIN_MAX;USE_BOOST;USE_BOOST_ALL_DYN_LINK"
        ""
        ${ARGN}
    )

    _CONCRETE_APPEND_CONFIG_OPTION(${CONCRETE_WIN32_SHUT_MIN_MAX} -DCONCRETE_WIN32_SHUT_MIN_MAX)

    _CONCRETE_APPEND_CONFIG_OPTION(${CONCRETE_USE_BOOST} -DCONCRETE_USE_BOOST)

    _CONCRETE_APPEND_CONFIG_OPTION(${CONCRETE_USE_BOOST_ALL_DYN_LINK} -DCONCRETE_USE_BOOST_ALL_DYN_LINK)
ENDMACRO(CONCRETE_CXX_CONFIG_OPTION_ENABLE)

MACRO(CONCRETE_GEN_CXX_CONFIG_FILE DEST_PATH)
    _CONCRETE_GEN_CONFIG_FILE(CXX_CONFIG.h.in ${DEST_PATH})
ENDMACRO(CONCRETE_GEN_CXX_CONFIG_FILE)
